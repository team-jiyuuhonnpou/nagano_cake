<div class="top">
  <div class="container">
    <div class="row">
      <h5 class="col-lg-6 offset-lg-2 mt-5 mb-0"><strong class="customer-title">会員の方はこちらからログイン</strong></h5>
    </div>
    <%= form_with model: @customer, url: new_customer_session_path, local: true do |f| %>
    <!-- 退会済みユーザーへのエラーメッセージ -->
      <div class="row">
        <div class="error-message offset-lg-2">
          <h5><strong class="text-danger"><%= flash[:error] %></strong></h5>
        </div>
      </div>
      <div class="field row">
        <%= f.label :email, 'メールアドレス', class: "col-lg-2 offset-lg-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-lg-6" %>
      </div>
      <div class="field row mt-4">
        <%= f.label :password, 'パスワード', class: "col-lg-2 offset-lg-2" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "col-lg-6" %>
      </div>
      <div class="row mt-1">
        <div class="col-lg-4 offset-lg-6 text-right p-0">
          <%= link_to '=>パスワードを忘れた方はこちら', new_customer_password_path(current_customer) %>
        </div>
      </div>
      <div class="row">
        <div class="actions offset-lg-4">
          <%= f.submit 'ログイン', class: "btn btn-1 px-4" %>
        </div>
      </div>
    <% end %>
    <div class="row">
      <h5 class="col-lg-6 offset-lg-2"><strong class="customer-title">登録がお済みでない方</strong></h5>
    </div>
    <div class="row mt-1 ml-4">
      <div class="col-lg-4 offset-lg-2">
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <p><%= link_to "こちら", new_registration_path(resource_name) %>　から新規登録を行ってください。</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
