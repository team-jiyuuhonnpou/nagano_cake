<h3>新規会員登録</h3>
<!-- 後でform_withに変更 -->
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>
  
  <div class="field">
    <%= f.label :last_name, '(姓)' %><%= f.text_field :last_name, autofocus: true, autocomplete: "family-name" %>
    <%= f.label :first_name, '(名)' %><%= f.text_field :first_name, autocomplete: "given-name" %>
  </div>
  <div class="field">
    <%= f.label :kana_last_name, '(セイ)' %><%= f.text_field :kana_last_name, autocomplete: "family-name" %>
    <%= f.label :kana_first_name, '(メイ)' %><%= f.text_field :kana_first_name, autocomplete: "given-name" %>
  </div>
  <div class="field">
    <%= f.label :email, 'メールアドレス' %>
    <%= f.email_field :email, autocomplete: "email" %>
  </div>
  <div class="field">
    <%= f.label :postcode, '郵便番号(ハイフンなし)' %>
    <%= f.text_field :postcode, autocomplete: "postal-code" %>
  </div>
  <div class="field">
    <%= f.label :street_address, '住所' %>
    <%= f.text_field :street_address %>
  </div>
  <div class="field">
    <%= f.label :phone_number, '電話番号(ハイフンなし)' %>
    <%= f.telephone_field :phone_number, autocomplete: "tel" %>
  </div>
  <div class="field">
    <%= f.label :password, 'パスワード'%><% if @minimum_password_length %><span>(<%= @minimum_password_length %>文字以上)</span><% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, 'パスワード(確認用)' %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  <div class="actions">
    <%= f.submit "新規登録", class: "btn btn-success" %>
  </div>
<% end %>

<h3>既に登録済みの方</h3>
<%- if controller_name != 'sessions' %>
  <p><%= link_to "こちら", new_session_path(resource_name) %>　から新規登録を行ってください。</p>
<% end %>
