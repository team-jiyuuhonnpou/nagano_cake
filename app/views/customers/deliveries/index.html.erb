<h3>配送先登録/一覧</h3>

<div class='container'>
  <div class="row">
    <div class="col-sm-8">
      <%= form_with model:@delivery, url: customers_deliveries_path, method: :post, local:true do |f| %>
        <div class="form-group form-inline">
          <%= f.label :postcode, '郵便番号(ハイフンなし)' %>
          <%= f.text_field :postcode, class: "form-control delivery_postcode" %>
        </div>
        <div class="form-group form-inline">
          <%= f.label :address, '住所' %>
          <%= f.text_field :address, class: "form-control delivery_address" %>
        </div>
        <div class="form-group form-inline">
          <%= f.label :name, '宛名' %>
          <%= f.text_field :name, class: "form-control delivery_name" %>
        </div>
        <div class="actions">
          <%= f.submit "登録する", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<table class='table'>
  <thead>
    <tr>
      <td>郵便番号</td>
      <td>住所</td>
      <td>宛名</td>
      <td></td>
    </tr>
  </thead>
  <tbody>
    <% @deliveries.each do |delivery| %>
      <tr>
        <td><%= delivery.postcode %></td>
        <td><%= delivery.address %></td>
        <td><%= delivery.name %></td>
        <td><%= link_to '編集する', edit_customers_delivery_path(delivery), class: "btn btn-primary" %><%= link_to '削除する', customers_delivery_path(delivery.id), method: :delete, "data-confirm" => '本当に削除しますか？', class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
