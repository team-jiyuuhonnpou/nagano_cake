<h3>配送先編集</h3>

<%= form_with model:@derivery, local:true do |f| %>
  <div class="form-group">
    <%= f.label :postcode, '郵便番号(ハイフンなし)' %>
    <%= f.text_field :postcode, class: "form-control delivery_postcode" %>
  </div>
  <div class="form-group">
    <%= f.label :address, '住所' %>
    <%= f.text_field :address, class: "form-control delivery_address" %>
  </div>
  <div class="form-group">
    <%= f.label :name, '宛名' %>
    <%= f.text_field :name, class: "form-control delivery_name" %>
  </div>
  <div class="actions">
    <%= f.submit "編集する", class: "btn btn-primary" %>
  </div>
<% end %>
