<h4>ショッピングカート</h4>
<%= link_to 'カートを空にする', "/customers/cart_items/destroy_all", method: :delete, "data-confirm" => '本当に削除しますか？', class: "btn btn-danger" %>
<table class='table'>
  <thead>
    <tr>
      <td>商品名</td>
      <td>単価(税込)</td>
      <td>数量</td>
      <td>小計</td>
      <td></td>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <td><%= attachment_image_tag(cart_item.item, :image, :fill, 50, 50) %><%= cart_item.item.item_name %></td>
        <td><%= (cart_item.item.non_taxed_price * 1.1).floor %></td>
        <td>
          <%= form_with model: cart_item, url: customers_cart_item_path(cart_item.id), method: :patch, local:true do |f| %>
            <%= f.number_field :amount, min: 0, max: 99  %>
            <%= f.submit '変更', class: 'btn btn-primary' %>
          <% end %>
        </td>
        <td><%= (cart_item.item.non_taxed_price * 1.1).floor * cart_item.amount %></td>
        <td><%= link_to '削除する', "/customers/cart_items/#{cart_item.id}", method: :delete, "data-confirm" => '本当に削除しますか？', class: "btn btn-sm btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to '情報入力に進む', new_customers_order_path, class: "btn btn-success" %>