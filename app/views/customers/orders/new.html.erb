<div class="container">
  <div class="row">
    <div class="col">
      <h2>注文情報入力</h2>
        <%= form_with model: @order, url: customers_orders_path do |f| %>
        <div>
          <h3>支払方法</h3>
          <%= f.radio_button :payment_method, 0 %>
          <%= f.label :payment_method, "クレジットカード", value: 0 %></br>
          <%= f.radio_button :payment_method, 1 %>
          <%= f.label :payment_method, "銀行振込", value: 1 %></br>
        </div>
        <div>
          <h3>お届け先</h3>
          <%= f.radio_button :postcode, current_customer.postcode %>
          <%= f.label :postcode, "ご自身の住所", value: current_customer.postcode %>
          〒<%= current_customer.postcode %>  <%= current_customer.street_address+ current_customer.last_name+ current_customer.first_name %></br>
          <%= @deliveries.name %>
          <%= f.radio_button :postcode, current_customer.postcode %>
          <%= f.label :postcode, "登録済み住所から選択"  %>
          <%= f.collection_select :postcode, @deliveries.all, :id, :postcode, include_blank: "選択して下さい" %>

          <%#= f.select ] %>

          <div class="new_address">
            <%= f.radio_button :postcode, 1 %>
            <%= f.label :postcode, "新しいお届け先" %></br>
            <%= f.text_field :postcode %>
          </div>

        </div>
        <%= f.submit "確認画面に進む", class: "btn btn-info" %>

      <% end %>
    </div>
  </div>
</div>