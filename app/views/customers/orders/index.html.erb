<div class="top">
    <div class="order_box">
      <h5 class="admins-title-name">注文履歴一覧</h5>
      <div class="order_box2">
      <table class="order_index">
        <thead>
          <tr>
            <th style="width: 100px;">注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th style="width: 100px;">ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
            <td>
              〒<%= order.postcode %></br>
              <%= order.address %></br>
              <%= order.name %>
            </td>
            <td>
              <% order.order_items.each do |order_item| %>
              <%= order_item.item.item_name %></br>
              <% end %>
            </td>
            <td>
              <%= number_with_delimiter(order.payment+order.fee) %>円
            </td>
            <td><%= order.status %></td>
            <td id="order_index_button"><%= link_to "表示する", customers_order_path(order.id), class: "btn btn-primary" %></td>
        <% end %>
        </tbody>
      </table>
     </div>
  </div>
  <%= paginate(@orders)  %>
</div>
