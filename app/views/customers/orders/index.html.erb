<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h5>注文履歴一覧</h5>
      <table>
        <thead>
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
            <td>
              <%= order.postcode %>
              <%= order.address %>
              <%= order.name %>
            </td>
            <td>
              <% order.order_items.each do |order_item| %>
              <%= order_item.item.item_name %>
              <% end %>
            </td>
            <td>
              <%= order.payment %>
            </td>
            <td><%= order.status %></td>
          </td>
        <% end %>
        <%#= paginate  %>
        </tbody>
      </table>
    </div>
  </div>
</div>