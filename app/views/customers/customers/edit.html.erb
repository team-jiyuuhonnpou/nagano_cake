<div class="container">
  <div class="row">
    <h5 class="col-lg-2 offset-lg-2 mt-5 mb-0"><strong class="customer-title px-3">登録情報編集</strong></h5>
  </div>
  <%= form_with model:current_customer, url: customers_customer_path, method: :patch, local:true do |f| %>
    <div class="form-group row">
      <span class="col-lg-2">名前</span>
      <%= f.label :last_name, '(姓)　', class: "col-lg-1 text-right" %><%= f.text_field :last_name, class: "col-lg-3" %>
      <%= f.label :first_name, '(名)　', class: "col-lg-1 text-right" %><%= f.text_field :first_name, class: "col-lg-3" %>
    </div>
    <div class="form-group row">
      <span class="col-lg-2">フリガナ</span>
      <%= f.label :kana_last_name, '(セイ)', class: "col-lg-1 text-right" %><%= f.text_field :kana_last_name, class: "col-lg-3" %>
      <%= f.label :kana_first_name, '(メイ)', class: "col-lg-1 text-right" %><%= f.text_field :kana_first_name, class: "col-lg-3" %>
    </div>
    <div class="form-group row">
      <%= f.label :email, 'メールアドレス', class: "col-lg-3" %>
      <%= f.email_field :email, class: "col-lg-3" %>
    </div>
    <div class="form-group row">
      <%= f.label :postcode, '郵便番号(ハイフンなし)', class: "col-lg-3" %>
      <%= f.text_field :postcode, class: "col-lg-3" %>
    </div>
    <div class="form-group row">
      <%= f.label :street_address, '住所', class: "col-lg-3" %>
      <%= f.text_field :street_address, class: "col-lg-7" %>
    </div>
    <div class="form-group row">
      <%= f.label :phone_number, '電話番号(ハイフンなし)', class: "col-lg-3" %>
      <%= f.telephone_field :phone_number, class: "col-lg-3" %>
    </div>
    <div class="form-group row">
      <div class="col-lg-3 offset-lg-2">
        <%= f.submit '編集内容を保存する', class: "btn btn-primary" %>
      </div>
      <div class="col-lg-1 offset-lg-4">
        <%= link_to '退会する', customers_customers_unsubscribe_path(current_customer), class: "btn btn-sm btn-danger" %>
      </div>
    </div>
  <% end %>
</div>
