<div class="container">
  <div class="row">
    <h5 class="col-lg-2 offset-lg-2 mt-5 mb-4"><strong class="customer-title px-3">マイページ</strong></h5>
  </div>
  <div class="row mb-3">
    <h5><strong class="col-lg-2">登録情報</strong></h5>
    <%= link_to '編集する', edit_customers_customer_path(current_customer), class: "btn btn-primary px-4 mr-3" %>
    <%= link_to 'パスワードを変更する', new_customer_password_path(current_customer), class: "btn btn-primary px-4" %>
  </div>
  <div class="row mb-4">
    <table class="table customer-table ml-3">
      <tr>
        <th>氏名</th>
        <td><%= current_customer.last_name %>　<%= current_customer.first_name %></td>
      </tr>
      <tr>
        <th>カナ</th>
        <td><%= current_customer.kana_last_name %>　<%= current_customer.kana_first_name %></td>
      </tr>
      <tr>
        <th>郵便番号</th>
        <td><%= current_customer.postcode %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= current_customer.street_address %></td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td><%= current_customer.phone_number %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= current_customer.email %></td>
      </tr>
    </table>
  </div>
  <div class="row mb-3">
    <h5><strong class="col-lg-2">配送先　</strong></h5>
    <%= link_to '一覧を見る', customers_deliveries_path, class: "btn btn-primary px-4" %>
  </div>
  <div class="row">
    <h5><strong class="col-lg-2">注文履歴</strong></h5>
    <%= link_to '一覧を見る', customers_orders_path, class: "btn btn-primary px-4" %>
  </div>
</div>
