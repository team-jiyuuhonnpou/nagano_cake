<h2>マイページ</h2>

<h3>登録情報</h3>
<%= link_to '編集する', edit_customers_customer_path(current_customer), class: "btn btn-primary" %>
<%= link_to 'パスワードを変更する', new_customer_password_path(current_customer), class: "btn btn-primary" %>

<table class="table">
  <tr>
    <th>氏名</th>
    <th><%= current_customer.last_name %><%= current_customer.first_name %></th>
  </tr>
  <tr>
    <th>カナ</th>
    <th><%= current_customer.kana_last_name %><%= current_customer.kana_first_name %></th>
  </tr>
  <tr>
    <th>郵便番号</th>
    <th><%= current_customer.postcode %></th>
  </tr>
  <tr>
    <th>住所</th>
    <th><%= current_customer.street_address %></th>
  </tr>
  <tr>
    <th>電話番号</th>
    <th><%= current_customer.phone_number %></th>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <th><%= current_customer.email %></th>
  </tr>
</table>

<h3>配送先</h3>
<%= link_to '一覧を見る', customers_deliveries_path, class: "btn btn-primary" %>

<h3>注文履歴</h3>
<%= link_to '一覧を見る', customers_orders_path, class: "btn btn-primary" %>
