<h3>オススメ商品</h3>
<table class="table">
  <% @items.each do |item| %>
    <tbody>
      <tr>
        <td><%= link_to customers_item_path(item) do %><%= attachment_image_tag(item, :image, :fill, 50, 50) %><% end %></td>
        <td><%= item.item_name %></td>
        <td>¥<%= item.non_taxed_price.to_s(:delimited) %></td>
      </tr>
    </tbody>
  <% end %>
</table>
