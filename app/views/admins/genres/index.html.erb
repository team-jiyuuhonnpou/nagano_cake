<div>
  <div>
    <div>
      <h2>ジャンル一覧・追加</h2>
        <%= form_with (model: Genre, local: true) do |f| %>
          <div>
          ジャンル
          <%= f.text_field :name %>
          <%= f.radio_button :is_active, true %>
          <%= f.lavel :is_active, "有効", {value: :true} %>
          <%= f.radio_button :is_active, false %>
          <%= f.lavel :is_active, "無効", {value: :false} %>
          <%= f.submit "変更を保存する", class: "btn btn-info" %>
          </div>
        <% end %>
      <table>
        <thead>
          <tr>
            <th>ジャンル</th>
            <th>状態</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <%= @genre.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <% if genre.is_active == true %>
                <td>有効</td>
              <% elsif genre.is_active == false %>
                <td>無効</td>
              <% end %>
              <td><%= link_to "編集する", edit_admins_genre_path(genre) %></td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
    <div class="text-center"><%= paginate(@genre) %></div>
</div>