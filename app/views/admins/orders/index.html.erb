<!---Admins::Orders#index--->
<div class="admins-order-body">
  <!---タイトル--->
  <strong class="admins-order-title-name">注文履歴一覧</strong>
  <table class="table admins-order-index-table">
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>
    <% @orders.each do |order| %>
    <tbody>
      <tr>
        <td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admins_order_path(order), class: 'create_day'%></td>
        <td><%= order.customer.last_name %><%= order.customer.first_name  %></td>
        <td><%= order.order_items.sum(:amount) %></td>
        <td><%= order.status %></td>
      </tr>
    </tbody>
    <% end %>
  </table>
  <%= paginate @orders %>
</div>


