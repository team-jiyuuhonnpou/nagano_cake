<!---Admins::Items#new--->
<h1>商品新規登録</h1>

<div class="container">
  <div class="row">
    <%= form_with model:@item, url:'/admins/items', local:true do |f| %>
      <div class="col-xs-4">
        <div>
          <%= f.attachment_field :image %>
        </div>
      </div class="col-xs-4">
        <div>
          <%= f.label "商品名" %>
          <%= f.text_field :item_name %>
        </div>
        <div>
          <%= f.label "商品説明" %>
          <%= f.text_area :explanation %>
        </div>
        <div>
          <%= f.label "ジャンル" %>
          <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %>
        </div>
        <div>
          <%= f.label "税抜価格" %>
          <%= f.text_field :non_taxed_price %>
        </div>
        <div>
          <%= f.label "販売ステータス" %>
          <%= f.select :is_active, { '販売中' => true, '売切れ' => false }, { include_blank: "選択して下さい" } %>
        </div>
      </div>
      <div class="col-xs-4">
        <%= f.submit "新規登録" %>
      </div>
    <% end %>
  </div>
</div>

