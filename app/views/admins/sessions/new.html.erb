<div class="top">
  <strong class="admins-title-name">管理者ログイン</strong>
<br>
<br>
<div class="row">
  <div class="col-xl-12 text-center">

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <!--error mag-->
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
      <% end %>

        <div class="field text-center">
          <%= f.label :"メールアドレス", class: "col-sm-4 control-label text-left" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-4 form-control-static" %>
        </div>

        <div class="field text-center">
          <%= f.label :"パスワード", class: "col-sm-4 control-label text-left" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "col-sm-4 form-control-static" %>
          </div>
        <br>
        <% if devise_mapping.rememberable? %>
          <div class="field text-center">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions text-center">
          <%= f.submit "ログイン", class: "btn btn-2 pull-right btn-sm w-auto" %>
        </div>
      <% end %>

  </div>
</div>
</div>