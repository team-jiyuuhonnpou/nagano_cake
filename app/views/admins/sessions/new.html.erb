<div class="row">
  <div class="col-xl-12 text-center">
    <h1 class="col-lg-4 offset-lg-1 title_h1 text-center">管理者ログイン</h1>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <!--error mag-->
      <%= render "layouts/error_msg", resource: resource %>

        <div class="field text-center">
          <%= f.label :"メールアドレス", class: "col-sm-4 control-label text-left" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-4 form-control-static" %>
        </div>

        <div class="field text-center">
          <%= f.label :"パスワード", class: "col-sm-4 control-label text-left" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "col-sm-4 form-control-static" %>
          </div>
        <br>
        <% if devise_mapping.rememberable? %>
          <div class="field text-center">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions text-center">
          <%= f.submit "ログイン", class: "btn btn-success pull-right btn-sm w-auto" %>
        </div>
      <% end %>

      <%= render "admins/shared/links" %>

  </div>
</div>
